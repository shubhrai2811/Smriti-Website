<style>
  section {
    padding-bottom: 4rem;
  }

  .section-title {
    text-align: center;
  }

  .section-subtitle {
    text-align: center;
    margin: 0 auto 3rem;
  }

  /* Scrollable container for mobile */
  .table-scroll-container {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    margin-top: 2rem;
  }

  .table-wrapper {
    padding: 1.5rem;
    min-width: 600px;
  }

  /* Table header background */
  .comparison-table th {
    background: rgba(10, 14, 26, 0.9);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
    padding: 1rem 1.25rem;
    font-size: 1rem;
    letter-spacing: 0.02em;
    white-space: nowrap;
  }

  :global([data-theme="light"]) .comparison-table th {
    background: rgba(248, 250, 252, 0.9);
  }

  .comparison-table th:first-child {
    border-radius: 8px 0 0 0;
  }

  .comparison-table th:last-child {
    border-radius: 0 8px 0 0;
  }

  /* Feature column wider */
  .feature-col {
    min-width: 220px;
  }

  .smriti-col {
    font-size: 1.1rem !important;
  }

  /* Cell styling */
  .comparison-table td {
    padding: 0.875rem 1.25rem;
    font-size: 0.9375rem;
    transition: background 0.2s ease;
  }

  .comparison-table td:first-child {
    color: #cbd5e1;
    font-weight: 500;
  }

  :global([data-theme="light"]) .comparison-table td:first-child {
    color: #334155;
  }

  /* Center the status columns */
  .comparison-table td:nth-child(2),
  .comparison-table td:nth-child(3),
  .comparison-table td:nth-child(4),
  .comparison-table th:nth-child(2),
  .comparison-table th:nth-child(3),
  .comparison-table th:nth-child(4) {
    text-align: center;
  }

  /* Row hover */
  .comparison-table tbody tr:hover {
    background: rgba(255, 255, 255, 0.03);
  }

  :global([data-theme="light"]) .comparison-table tbody tr:hover {
    background: rgba(0, 0, 0, 0.02);
  }

  /* Smriti-exclusive row glow */
  .smriti-exclusive {
    background: rgba(0, 217, 255, 0.03);
  }

  .smriti-exclusive td:first-child {
    border-left: 2px solid rgba(0, 217, 255, 0.3);
  }

  :global([data-theme="light"]) .smriti-exclusive {
    background: rgba(14, 165, 233, 0.04);
  }

  :global([data-theme="light"]) .smriti-exclusive td:first-child {
    border-left-color: rgba(14, 165, 233, 0.3);
  }

  .smriti-exclusive:hover {
    background: rgba(0, 217, 255, 0.06) !important;
  }

  :global([data-theme="light"]) .smriti-exclusive:hover {
    background: rgba(14, 165, 233, 0.07) !important;
  }

  /* Check / Cross / Partial icons */
  .check {
    color: var(--color-cyan);
    font-weight: 700;
    font-size: 1.125rem;
    text-shadow: 0 0 8px rgba(0, 217, 255, 0.4);
  }

  :global([data-theme="light"]) .check {
    color: #0ea5e9;
    text-shadow: none;
  }

  .cross {
    color: #475569;
    font-weight: 400;
    font-size: 1rem;
  }

  :global([data-theme="light"]) .cross {
    color: #94a3b8;
  }

  .partial {
    color: #fbbf24;
    font-weight: 600;
    font-size: 1.125rem;
    text-shadow: 0 0 8px rgba(251, 191, 36, 0.3);
  }

  :global([data-theme="light"]) .partial {
    color: #d97706;
    text-shadow: none;
  }

  /* Last row no border */
  .comparison-table tbody tr:last-child td {
    border-bottom: none;
  }

  /* Mobile scroll hint */
  @media (max-width: 768px) {
    .table-wrapper {
      padding: 1rem;
    }

    .comparison-table td,
    .comparison-table th {
      padding: 0.625rem 0.875rem;
      font-size: 0.875rem;
    }
  }
</style>
