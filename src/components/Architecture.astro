<section id="architecture" class="section">
  <div class="reveal">
    <h2 class="section-title gradient-text">Architecture</h2>
    <p class="section-subtitle">
      Built for reliability, speed, and zero overhead. Every design choice serves a purpose.
    </p>
  </div>

  <!-- Tech Stack Pills -->
  <div class="reveal tech-stack">
    <div class="pill-row">
      <span class="pill pill-cyan">Bun</span>
      <span class="pill pill-cyan">TypeScript</span>
      <span class="pill pill-purple">SQLite</span>
      <span class="pill pill-purple">sqlite-vec</span>
      <span class="pill pill-magenta">ONNX Runtime</span>
      <span class="pill pill-cyan">Hono</span>
      <span class="pill pill-purple">Claude SDK</span>
      <span class="pill pill-magenta">esbuild</span>
    </div>
  </div>

  <!-- Architecture Diagram -->
  <div class="reveal diagram-container glass">
    <h3 class="diagram-title">Data Flow</h3>

    <div class="diagram">
      <!-- Row 1: Claude Code -> Hook Events -> Smriti Worker -->
      <div class="diagram-row">
        <div class="diagram-box box-source">
          <div class="box-icon">&#9654;</div>
          <div class="box-label">Claude Code</div>
        </div>

        <div class="diagram-arrow">
          <div class="arrow-line"></div>
          <div class="arrow-label">hooks</div>
        </div>

        <div class="diagram-box box-events">
          <div class="box-icon">&#9889;</div>
          <div class="box-label">Hook Events</div>
        </div>

        <div class="diagram-arrow">
          <div class="arrow-line"></div>
          <div class="arrow-label">trigger</div>
        </div>

        <div class="diagram-box box-worker">
          <div class="box-icon">&#9881;</div>
          <div class="box-label">Smriti Worker</div>
          <div class="box-sub">Hono</div>
        </div>
      </div>

      <!-- Vertical connectors from worker -->
      <div class="diagram-verticals">
        <div class="vertical-branch branch-left">
          <div class="vertical-line"></div>
          <div class="diagram-arrow-down">
            <div class="arrow-label-side">extract</div>
          </div>
          <div class="diagram-box box-ai">
            <div class="box-icon">&#129302;</div>
            <div class="box-label">AI Provider</div>
            <div class="box-sub">Claude / OpenRouter</div>
          </div>
        </div>

        <div class="vertical-branch branch-right">
          <div class="vertical-line"></div>
          <div class="diagram-arrow-down">
            <div class="arrow-label-side">store & query</div>
          </div>
          <div class="diagram-box box-db">
            <div class="box-icon">&#128451;</div>
            <div class="box-label">SQLite DB</div>
            <div class="box-sub">sqlite-vec</div>
          </div>
          <div class="vertical-line short"></div>
          <div class="diagram-arrow-down">
            <div class="arrow-label-side">inject</div>
          </div>
          <div class="diagram-box box-output">
            <div class="box-icon">&#128196;</div>
            <div class="box-label">CLAUDE.md</div>
            <div class="box-sub">context injection</div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Design Principles -->
  <div class="reveal principles-grid">
    <div class="principle glass-subtle">
      <div class="principle-icon">&#128737;</div>
      <h4 class="principle-title">Stateless worker</h4>
      <p class="principle-desc">All state lives in SQLite. Crash-safe by design â€” restart anytime without data loss.</p>
    </div>

    <div class="principle glass-subtle">
      <div class="principle-icon">&#9889;</div>
      <h4 class="principle-title">One-shot AI calls</h4>
      <p class="principle-desc">No persistent sessions, no orphan processes. Each extraction is a single, clean API call.</p>
    </div>

    <div class="principle glass-subtle">
      <div class="principle-icon">&#128276;</div>
      <h4 class="principle-title">Event-driven</h4>
      <p class="principle-desc">No polling. Hook-triggered processing means zero overhead when idle.</p>
    </div>

    <div class="principle glass-subtle">
      <div class="principle-icon">&#128260;</div>
      <h4 class="principle-title">Provider-agnostic</h4>
      <p class="principle-desc">Claude SDK primary, OpenRouter fallback. Swap providers without touching business logic.</p>
    </div>
  </div>
</section>

