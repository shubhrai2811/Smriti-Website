<style>
  /* ===== Terminal Window ===== */
  .terminal-window {
    padding: 0;
    overflow: hidden;
    box-shadow:
      0 0 30px rgba(0, 217, 255, 0.08),
      0 25px 50px rgba(0, 0, 0, 0.4);
    transition: box-shadow 0.4s ease;
  }

  .terminal-window:hover {
    box-shadow:
      0 0 40px rgba(0, 217, 255, 0.12),
      0 25px 60px rgba(0, 0, 0, 0.5);
  }

  /* Terminal Header */
  .terminal-header {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
    background: rgba(0, 0, 0, 0.2);
  }

  .terminal-dots {
    display: flex;
    gap: 0.375rem;
  }

  .terminal-dot {
    width: 0.75rem;
    height: 0.75rem;
    border-radius: 50%;
  }

  .terminal-dot-red {
    background: rgba(239, 68, 68, 0.8);
  }

  .terminal-dot-yellow {
    background: rgba(234, 179, 8, 0.8);
  }

  .terminal-dot-green {
    background: rgba(34, 197, 94, 0.8);
  }

  .terminal-title {
    margin-left: 0.5rem;
    font-family: var(--font-mono);
    font-size: 0.75rem;
    opacity: 0.5;
  }

  /* Terminal Body */
  .terminal-body {
    padding: 1.25rem 1.5rem;
    font-family: var(--font-mono);
    font-size: 0.875rem;
    text-align: left;
    line-height: 1.7;
  }

  /* Comment line — now visible (was invisible HTML comment before) */
  .terminal-comment {
    color: #6b7280;
    margin-bottom: 0.75rem;
    font-style: italic;
    font-size: 0.8125rem;
    opacity: 0;
    animation: terminalFadeIn 0.5s ease forwards;
    animation-delay: 0.3s;
  }

  .terminal-comment-slashes {
    color: #4a5568;
    margin-right: 0.375rem;
    font-style: normal;
  }

  /* Terminal lines with staggered reveal */
  .terminal-line {
    margin-bottom: 0.25rem;
  }

  .terminal-line-delay {
    display: inline-block;
    opacity: 0;
    animation: terminalFadeIn 0.4s ease forwards;
    animation-delay: var(--delay, 0s);
  }

  .terminal-hash {
    font-weight: 700;
    margin-right: 0.375rem;
  }

  .terminal-heading {
    font-weight: 600;
  }

  .terminal-content {
    padding-left: 0.25rem;
  }

  .terminal-content .terminal-line-delay {
    font-size: 0.8125rem;
    opacity: 0;
    animation: terminalFadeInDim 0.4s ease forwards;
    animation-delay: var(--delay, 0s);
  }

  .terminal-spacer {
    height: 0.625rem;
  }

  /* Typing cursor */
  .terminal-cursor-line {
    margin-top: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    opacity: 0;
    animation: terminalFadeIn 0.3s ease forwards;
    animation-delay: 2.5s;
  }

  .terminal-prompt {
    color: var(--color-cyan);
    font-weight: 700;
    font-size: 0.875rem;
  }

  .terminal-cursor {
    display: inline-block;
    width: 0.5rem;
    height: 1.125rem;
    background: var(--color-cyan);
    opacity: 0.8;
    animation: cursorBlink 1s step-end infinite;
    animation-delay: 2.5s;
    border-radius: 1px;
  }

  @keyframes cursorBlink {
    0%, 100% { opacity: 0.8; }
    50% { opacity: 0; }
  }

  @keyframes terminalFadeIn {
    from {
      opacity: 0;
      transform: translateY(4px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes terminalFadeInDim {
    from {
      opacity: 0;
      transform: translateY(4px);
    }
    to {
      opacity: 0.7;
      transform: translateY(0);
    }
  }

  /* ===== Gradient Divider ===== */
  .hero-divider {
    position: absolute;
    bottom: 0;
    left: 5%;
    right: 5%;
    height: 1px;
    background: linear-gradient(
      90deg,
      transparent,
      var(--color-cyan) 20%,
      var(--color-purple) 50%,
      var(--color-magenta) 80%,
      transparent
    );
    opacity: 0.3;
  }

  /* ===== Light Theme Overrides ===== */
  :global([data-theme="light"]) .terminal-window {
    box-shadow:
      0 0 20px rgba(14, 165, 233, 0.06),
      0 20px 40px rgba(0, 0, 0, 0.08);
  }

  :global([data-theme="light"]) .terminal-window:hover {
    box-shadow:
      0 0 30px rgba(14, 165, 233, 0.1),
      0 20px 50px rgba(0, 0, 0, 0.12);
  }

  :global([data-theme="light"]) .terminal-header {
    border-bottom-color: rgba(0, 0, 0, 0.06);
    background: rgba(0, 0, 0, 0.02);
  }

  :global([data-theme="light"]) .terminal-comment {
    color: #94a3b8;
  }

  :global([data-theme="light"]) .terminal-comment-slashes {
    color: #94a3b8;
  }

  :global([data-theme="light"]) .hero-divider {
    opacity: 0.2;
  }

  :global([data-theme="light"]) .terminal-cursor {
    background: var(--color-light-accent);
  }

  :global([data-theme="light"]) .terminal-prompt {
    color: var(--color-light-accent);
  }
</style>
