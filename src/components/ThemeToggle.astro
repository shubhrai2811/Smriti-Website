<button
  class="theme-toggle p-2 rounded-lg transition-colors cursor-pointer"
  aria-label="Toggle theme"
>
  <svg class="sun-icon w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="display:none;">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
  </svg>
  <svg class="moon-icon w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="display:none;">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
  </svg>
</button>

<style>
  button {
    color: #94a3b8;
    line-height: 0;
  }
  button:hover {
    background: rgba(255, 255, 255, 0.1);
    color: #e2e8f0;
  }
  :global([data-theme="light"]) button {
    color: #64748b;
  }
  :global([data-theme="light"]) button:hover {
    background: rgba(0, 0, 0, 0.05);
    color: #1e293b;
  }
</style>
